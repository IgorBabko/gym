.Auth 
    position: fixed
    top: 50%
    left: 50%
    width: 50%
    max-width: 630px
    min-width: 320px
    height: auto
    z-index: 2000
    visibility: hidden
    transform: translateX(-50%) translateY(-50%)

    &--visible 
        visibility: visible

    &__overlay 
        position: fixed
        width: 100vw
        height: 100vh
        visibility: hidden
        top: 0
        left: 0
        z-index: 1000
        opacity: 0
        background: rgba(black, 0.85)
        transition: all 0.3s ease-in-out

    &__form 
        background: white
        display: block
        transform: scale(0.7)
        opacity: 0
        transition: all 0.3s

    &--visible 
        .Auth__form 
            transform: scale(1)
            opacity: 1

    &--visible + .Auth__overlay 
            opacity: 1
            visibility: visible
