.Button
    border: none
    font-size: 28px
    color: white
    padding: 15px
    margin: 15px
    border-radius: 10px
    transition: background 0.1s ease-in-out
    cursor: pointer
    
    &:focus
        outline: none

    &--red
        background: $red
        border-bottom: 5px solid $darkestRed
        &:hover
            background: $darkRed
        
    &--pink
        background: $pink
        border-bottom: 5px solid $darkestPink
        &:hover
            background: $darkPink
    
    &--blue
        background: $blue
        border-bottom: 5px solid $darkestBlue
        &:hover
            background: $darkBlue
    
    &--yellow
        background: $yellow
        border-bottom: 5px solid $darkestYellow

        &:hover
            background: $darkYellow

        &:active
            border: none
            margin-top: 20px 