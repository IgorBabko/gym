.Nav
    height: 70px
    background: black
    display: flex
    justify-content: space-between
    align-items: center
    padding: 0 50px
    color: white
    
    &__list
        display: flex
        list-style: none
        margin: 0
        padding: 0
        height: 100%

    &__item
        display: flex
        align-items: center
        cursor: pointer
        font-size: 18px
        font-weight: 100
        padding: 0 20px
        transition: background 0.2s ease-in-out
        
        &:hover
            background: $red