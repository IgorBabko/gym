.Nav
    height: 70px
    background: black
    display: flex
    justify-content: space-between
    align-items: center
    padding: 0 50px
    color: white
    
    @media screen and (max-width: 768px)
        padding: 0 20px
    
    &__list
        display: flex
        list-style: none
        margin: 0
        padding: 0
        height: 100%
        
        &--dropdown
            padding: 0
            background: $gray
            display: block
            position: fixed
            top: 70px
            left: 0
            width: 100%
            height: 100%

    &__item
        display: flex
        align-items: center
        cursor: pointer
        font-size: 18px
        font-weight: 100
        padding: 0 20px
        transition: background 0.2s ease-in-out
    
        @media screen and (max-width: 768px)
            padding: 15px 30px
        
        &:hover
            background: $red