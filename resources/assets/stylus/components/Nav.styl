.Nav
    z-index: 10000
    height: 70px
    background: rgba($darkestGray, 0.9) 
    position: fixed
    top: 0
    left: 0
    width: 100%
    display: flex
    justify-content: space-between
    align-items: center
    padding: 0 50px
    
    &__list
        display: flex
        list-style: none
        margin: 0
        padding: 0
        height: 100%
    
    &__link
        display: flex
        width: 100%
        color: white
        height: 70px 
        align-items: center
        padding: 0 15px

        &:focus
            color: white
            text-decoration: none
            outline: none

        &:hover
            color: black
            text-decoration: none
            background: $yellow

        &--active
            background: $yellow
            color: black

    &__item
        display: flex
        align-items: center
        font-size: 18px
        font-weight: 100
        cursor: pointer

        &--hamburger
            display: none
            padding: 23px 20px 0 !important
            height: 100%
            font-size: 24px

    @media screen and (max-width: 768px)
        padding: 0 0 0 20px

        &__list
            padding: 0
            background: rgba(51,51,51,0.8)
            display: none
            position: fixed
            top: 70px
            left: 0
            width: 100%
            height: 100%
        
        &__item
            &--hamburger
                display: block

        &__link
            padding: 15px 30px
