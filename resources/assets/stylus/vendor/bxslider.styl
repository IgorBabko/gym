.bx-wrapper
    border: none

.bx-viewport
    height: calc(100vh - 65px) !important
    height: -webkit-calc(100vh - 65px) !important
    height: -o-calc(100vh - 65px) !important
    height: -moz-calc(100vh - 65px) !important

.bx-wrapper .bx-controls-autoi,
.bx-wrapper .bx-pager
    bottom: 30px

.bx-wrapper .bx-pager.bx-default-pager a
    background: white

.bx-wrapper
    margin: 0
    .bx-pager.bx-default-pager
        a
            width: 17px
            height: 17px
            border-radius: 50%
            background: none
            border: 2px solid white
        a.active,
        a:focus,
        a:hover
            background: white 
