.bx-wrapper
    border: none
    top: -70px

.bx-viewport
    height: calc(100vh) !important

.bx-wrapper
    .bx-controls.bx-has-controls-auto.bx-has-pager
        .bx-pager
            width: 100%
            text-align: center
            bottom: 30px

.bx-wrapper
    .bx-prev,
    .bx-next
        background: url(../img/controls.png)

.bx-wrapper .bx-pager.bx-default-pager a
    background: white

.bx-wrapper
    .bx-pager.bx-default-pager
        a
            width: 17px
            height: 17px
            border-radius: 50%
            background: none
            border: 2px solid white
        a.active,
        a:focus,
        a:hover
            background: white 
